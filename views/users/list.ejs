<!DOCTYPE html>
<html>
<head>
  <title>User List</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 40px; }
    table { border-collapse: collapse; width: 60%; margin-bottom: 20px; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background: #f0f0f0; }
    a.button { background: #007bff; color: #fff; padding: 6px 12px; text-decoration: none; border-radius: 4px; }
    a.button:hover { background: #0056b3; }
    .actions a { margin-right: 8px; }
  </style>
</head>
<body>
  <h1>User List</h1>
  <a href="/users/add" class="button">Add User</a>
  <table>
    <tr>
      <th>ID</th>
      <th>Username</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.username %></td>
        <td><%= user.role %></td>
        <td class="actions">
          <a href="/users/edit/<%= user.id %>" class="button">Edit</a>
          <a href="/users/delete/<%= user.id %>" class="button" style="background:#dc3545;" onclick="return confirm('Delete user?')">Delete</a>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>